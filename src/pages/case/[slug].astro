---
import BaseLayout from '../../layouts/BaseLayout.astro';
import CTAButton from '../../components/CTAButton.astro';

// Mock case data - i fremtiden kan dette hentes fra CMS eller database
// Moved to module scope for getStaticPaths access
const caseData = {
  'case-1': {
    title: '[Spesifikasjon kommer - Case tittel 1]',
    client: '[Spesifikasjon kommer - Kunde navn]',
    category: 'E-handel',
    description:
      '[Spesifikasjon kommer - Detaljert beskrivelse av prosjektet og utfordringen vi løste]',
    image: '/images/case-1-hero.jpg',
    tags: ['E-handel', 'Responsivt design', 'Betalingsintegrasjon'],
    year: '2024',
    duration: '6 uker',
    challenge:
      '[Spesifikasjon kommer] - Kunden hadde utfordringer med sin eksisterende nettbutikk som ikke konverterte godt nok og hadde en komplisert checkout-prosess.',
    solution:
      '[Spesifikasjon kommer] - Vi designet en helt ny brukeropplevelse med fokus på konvertering, implementerte en strømlinjeformet checkout og integrerte moderne betalingsløsninger.',
    results: [
      '150% økning i konverteringsrate',
      '75% reduksjon i forlatte handlekurver',
      '300% økning i mobil salg',
      'ROI på 400% første år',
    ],
    technologies: ['React', 'Node.js', 'Stripe', 'MongoDB'],
    testimonial: {
      text: '[Spesifikasjon kommer] - Fantastisk resultat! Salget vårt har økt dramatisk siden den nye nettsiden ble lansert.',
      author: '[Navn kommer]',
      position: 'CEO',
      company: '[Bedrift kommer]',
    },
  },
  'case-2': {
    title: '[Spesifikasjon kommer - Case tittel 2]',
    client: '[Spesifikasjon kommer - Kunde navn]',
    category: 'Bedriftsnettside',
    description:
      '[Spesifikasjon kommer - Detaljert beskrivelse av prosjektet og utfordringen vi løste]',
    image: '/images/case-2-hero.jpg',
    tags: ['Bedriftsnettside', 'CMS', 'SEO'],
    year: '2024',
    duration: '4 uker',
    challenge:
      '[Spesifikasjon kommer] - Bedriften trengte en moderne nettside som reflekterte deres profesjonalitet og gjorde det enkelt å oppdatere innhold.',
    solution:
      '[Spesifikasjon kommer] - Vi utviklet en elegant bedriftsnettside med et brukervennlig CMS og implementerte en omfattende SEO-strategi.',
    results: [
      '250% økning i organisk trafikk',
      '180% flere henvendelser',
      'Topp 3 rangering for viktige søkeord',
      '90% reduksjon i tid brukt på innholdsoppdateringer',
    ],
    technologies: ['WordPress', 'PHP', 'MySQL', 'Yoast SEO'],
    testimonial: {
      text: '[Spesifikasjon kommer] - Vår nye nettside har gitt oss en helt ny digital tilstedeværelse og mange flere kunder.',
      author: '[Navn kommer]',
      position: 'Markedssjef',
      company: '[Bedrift kommer]',
    },
  },
  // Kan legge til flere cases her...
};

export async function getStaticPaths() {
  // Define case data here to ensure scope access
  const cases = {
    'case-1': 'Case 1',
    'case-2': 'Case 2',
  };

  return Object.keys(cases).map((slug) => ({
    params: { slug },
  }));
}

const { slug } = Astro.params;
const caseStudy = caseData[slug];

if (!caseStudy) {
  return Astro.redirect('/case');
}
---

<BaseLayout
  title={`${caseStudy.title} - Case Study - Nettup`}
  description={`Se hvordan vi hjalp ${caseStudy.client} med ${caseStudy.category.toLowerCase()}. ${caseStudy.description}`}
>
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-blue-50 to-indigo-100 py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div>
          <!-- Category badge -->
          <span
            class="bg-blue-600 text-white px-4 py-2 rounded-full text-sm font-medium mb-6 inline-block"
          >
            {caseStudy.category}
          </span>

          <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
            {caseStudy.title}
          </h1>

          <p class="text-xl text-gray-600 mb-8">
            {caseStudy.description}
          </p>

          <!-- Meta info -->
          <div class="grid grid-cols-2 gap-6 mb-8">
            <div>
              <span class="text-sm text-gray-500 block">Kunde</span>
              <span class="font-semibold text-gray-900">{caseStudy.client}</span
              >
            </div>
            <div>
              <span class="text-sm text-gray-500 block">År</span>
              <span class="font-semibold text-gray-900">{caseStudy.year}</span>
            </div>
            <div>
              <span class="text-sm text-gray-500 block">Varighet</span>
              <span class="font-semibold text-gray-900"
                >{caseStudy.duration}</span
              >
            </div>
            <div>
              <span class="text-sm text-gray-500 block">Kategori</span>
              <span class="font-semibold text-gray-900"
                >{caseStudy.category}</span
              >
            </div>
          </div>

          <!-- Tags -->
          <div class="flex flex-wrap gap-2">
            {
              caseStudy.tags.map((tag) => (
                <span class="bg-gray-100 text-gray-700 px-3 py-1 rounded-full text-sm">
                  {tag}
                </span>
              ))
            }
          </div>
        </div>

        <!-- Hero image -->
        <div class="lg:order-last">
          <div
            class="bg-gray-200 rounded-lg h-96 flex items-center justify-center"
          >
            <span class="text-gray-500">[Hovedbilde kommer]</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Utfordring -->
  <section class="py-16 lg:py-24 bg-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-8">
        Utfordringen
      </h2>
      <div class="prose prose-lg prose-blue max-w-none">
        <p class="text-lg text-gray-600 leading-relaxed">
          {caseStudy.challenge}
        </p>
      </div>
    </div>
  </section>

  <!-- Løsning -->
  <section class="py-16 lg:py-24 bg-gray-50">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-8">
        Vår løsning
      </h2>
      <div class="prose prose-lg prose-blue max-w-none">
        <p class="text-lg text-gray-600 leading-relaxed mb-8">
          {caseStudy.solution}
        </p>
      </div>

      <!-- Teknologier -->
      <div class="mt-12">
        <h3 class="text-xl font-semibold text-gray-900 mb-6">
          Teknologier brukt
        </h3>
        <div class="flex flex-wrap gap-3">
          {
            caseStudy.technologies.map((tech) => (
              <span class="bg-blue-100 text-blue-800 px-4 py-2 rounded-lg font-medium">
                {tech}
              </span>
            ))
          }
        </div>
      </div>
    </div>
  </section>

  <!-- Resultater -->
  <section class="py-16 lg:py-24 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
          Resultater
        </h2>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          [Spesifikasjon kommer] - Målingen av suksess i konkrete tall
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {
          caseStudy.results.map((result, index) => (
            <div class="text-center p-6 bg-blue-50 rounded-lg">
              <div class="w-16 h-16 bg-blue-600 text-white rounded-full flex items-center justify-center mx-auto mb-4 text-2xl font-bold">
                {index + 1}
              </div>
              <p class="font-semibold text-gray-900 text-lg">{result}</p>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Testimonial -->
  <section class="py-16 lg:py-24 bg-gray-50">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <div class="mb-8">
          <svg
            class="w-12 h-12 text-blue-600 mx-auto"
            fill="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h4v10h-10z"
            ></path>
          </svg>
        </div>

        <blockquote class="text-2xl font-medium text-gray-900 mb-8 italic">
          "{caseStudy.testimonial.text}"
        </blockquote>

        <div class="flex items-center justify-center space-x-4">
          <div class="w-16 h-16 bg-gray-300 rounded-full"></div>
          <div class="text-left">
            <p class="font-semibold text-gray-900">
              {caseStudy.testimonial.author}
            </p>
            <p class="text-gray-600">
              {caseStudy.testimonial.position}, {caseStudy.testimonial.company}
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Process (valgfritt) -->
  <section class="py-16 lg:py-24 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
          Prosessen
        </h2>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          [Spesifikasjon kommer] - Slik gikk vi frem for å levere resultater
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
        <!-- Fase 1 -->
        <div class="text-center">
          <div
            class="w-16 h-16 bg-blue-600 text-white rounded-full flex items-center justify-center mx-auto mb-4 text-xl font-bold"
          >
            1
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Analyse</h3>
          <p class="text-gray-600 text-sm">
            [Spesifikasjon kommer] - Grundig kartlegging av behov og
            utfordringer
          </p>
        </div>

        <!-- Fase 2 -->
        <div class="text-center">
          <div
            class="w-16 h-16 bg-blue-600 text-white rounded-full flex items-center justify-center mx-auto mb-4 text-xl font-bold"
          >
            2
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Design</h3>
          <p class="text-gray-600 text-sm">
            [Spesifikasjon kommer] - Brukersentrert design og prototyping
          </p>
        </div>

        <!-- Fase 3 -->
        <div class="text-center">
          <div
            class="w-16 h-16 bg-blue-600 text-white rounded-full flex items-center justify-center mx-auto mb-4 text-xl font-bold"
          >
            3
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Utvikling</h3>
          <p class="text-gray-600 text-sm">
            [Spesifikasjon kommer] - Implementering med moderne teknologi
          </p>
        </div>

        <!-- Fase 4 -->
        <div class="text-center">
          <div
            class="w-16 h-16 bg-blue-600 text-white rounded-full flex items-center justify-center mx-auto mb-4 text-xl font-bold"
          >
            4
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Lansering</h3>
          <p class="text-gray-600 text-sm">
            [Spesifikasjon kommer] - Testing, optimalisering og lansering
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Andre case studies -->
  <section class="py-16 lg:py-24 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
          Se flere prosjekter
        </h2>
        <p class="text-lg text-gray-600">
          [Spesifikasjon kommer] - Utforsk andre suksesshistorier
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-12">
        <!-- Case 1 -->
        <article
          class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-200"
        >
          <div class="h-48 bg-gray-200 relative">
            <div class="absolute inset-0 flex items-center justify-center">
              <span class="text-gray-500">[Bilde kommer]</span>
            </div>
            <div class="absolute top-4 left-4">
              <span
                class="bg-blue-600 text-white px-3 py-1 rounded-full text-sm font-medium"
              >
                E-handel
              </span>
            </div>
          </div>
          <div class="p-6">
            <h3 class="text-xl font-semibold text-gray-900 mb-2">
              [Spesifikasjon kommer - Annet case]
            </h3>
            <p class="text-gray-600 mb-4">
              [Spesifikasjon kommer - Kort beskrivelse]
            </p>
            <a
              href="/case/annet-case"
              class="text-blue-600 hover:text-blue-700 font-medium"
            >
              Les mer →
            </a>
          </div>
        </article>

        <!-- Case 2 -->
        <article
          class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-200"
        >
          <div class="h-48 bg-gray-200 relative">
            <div class="absolute inset-0 flex items-center justify-center">
              <span class="text-gray-500">[Bilde kommer]</span>
            </div>
            <div class="absolute top-4 left-4">
              <span
                class="bg-green-600 text-white px-3 py-1 rounded-full text-sm font-medium"
              >
                Bedriftsnettside
              </span>
            </div>
          </div>
          <div class="p-6">
            <h3 class="text-xl font-semibold text-gray-900 mb-2">
              [Spesifikasjon kommer - Annet case]
            </h3>
            <p class="text-gray-600 mb-4">
              [Spesifikasjon kommer - Kort beskrivelse]
            </p>
            <a
              href="/case/annet-case-2"
              class="text-blue-600 hover:text-blue-700 font-medium"
            >
              Les mer →
            </a>
          </div>
        </article>
      </div>

      <div class="text-center">
        <CTAButton
          text="Se alle case-studier"
          href="/case"
          variant="outline"
          size="lg"
        />
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 lg:py-24 bg-blue-600 text-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">
        Klar for å skape din suksesshistorie?
      </h2>
      <p class="text-xl mb-8">
        [Spesifikasjon kommer] - La oss diskutere hvordan vi kan hjelpe deg med
        å oppnå lignende resultater
      </p>
      <CTAButton
        text="Book en gratis konsultasjon"
        variant="outline"
        size="lg"
        onclick="openCalendly()"
        class="border-white text-white hover:bg-white hover:text-blue-600"
      />
    </div>
  </section>
</BaseLayout>
