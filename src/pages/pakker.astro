  'https://nettup.no/images/pakker/start.png'
);

const standardPackageSchema = packageSchema(
  'Standard Pakke - Nettup',
  '11000',
  'Bedriften klar - den typiske SMB-nettsiden som skal konvertere',
  [
    '6-10 sider',
    'Blogg og innholdsmaler',
    'Semiskreddersøm design',
    '1 integrasjon',
    '2 revisjonsrunder',
    'SEO+ med søkeordsgrunnlag',
  ],
  'https://nettup.no/images/pakker/plus.png'
);

const growthPackageSchema = packageSchema(
  'Growth/Pro Pakke - Nettup',
  '20000',
  'Skaler og konverter - for bedrifter som vil ha dokumenterbar vekst',
  [
    '10-15 sider',
    'Skreddersydd designsystem',
    '2-3 integrasjoner',
    'Innholdsreview + CRO',
    'Ytelsesoptimalisering',
  ],
  'https://nettup.no/images/pakker/pro.png'
);

// Commerce as add-on, not a separate package

const breadcrumbs = [
  { name: 'Hjem', url: 'https://nettup.no' },
  { name: 'Pakker & Priser', url: 'https://nettup.no/pakker' },
];
