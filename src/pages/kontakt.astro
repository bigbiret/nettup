---
import BaseLayout from '../layouts/BaseLayout.astro';
import CTAButton from '../components/CTAButton.astro';

// Hent valgt pakke fra URL parameter
const url = new URL(Astro.request.url);
const selectedPackage = url.searchParams.get('pakke') || '';
---

<BaseLayout
  title="Ta kontakt - Nettup"
  description="Ta kontakt med Nettup for en uforpliktende samtale om ditt webprosjekt. Vi tilbyr gratis konsultasjon og skreddersÃ¸m tilbud."
>
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-blue-50 to-indigo-100 py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
          Ta <span class="text-blue-600">kontakt</span>
        </h1>
        <p class="text-xl md:text-2xl text-gray-600 mb-8 max-w-3xl mx-auto">
          Klar for Ã¥ starte ditt webprosjekt? La oss ta en uforpliktende prat om
          dine behov
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <CTAButton
            text="Book gratis konsultasjon"
            onclick="openCalendly()"
            size="lg"
          />
        </div>
      </div>
    </div>
  </section>

  <!-- Kontakt seksjon -->
  <section class="py-16 lg:py-24 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16">
        <!-- Kontaktskjema -->
        <div>
          <h2 class="text-3xl font-bold text-gray-900 mb-6">Send en melding</h2>
          <p class="text-lg text-gray-600 mb-8">
            Fyll ut skjemaet under, sÃ¥ tar vi kontakt med deg innen 24 timer.
          </p>

          <form
            id="contact-form"
            class="space-y-6"
            action="https://formsubmit.co/post@nettup.no"
            method="POST"
          >
            <!-- FormSubmit.co configuration -->
            <input type="hidden" name="_next" value="https://nettup.no/takk" />
            <input
              type="hidden"
              name="_subject"
              value="Ny kontaktforespÃ¸rsel fra nettup.no"
            />
            <input
              type="hidden"
              name="_autoresponse"
              value="Takk for din henvendelse! Vi har mottatt din melding og vil komme tilbake til deg innen 24 timer. Med vennlig hilsen, Teamet pÃ¥ Nettup"
            />
            <input type="hidden" name="_template" value="table" />
            <input type="hidden" name="_captcha" value="false" />
            <!-- Navn -->
            <div>
              <label
                for="name"
                class="block text-sm font-medium text-gray-700 mb-2"
              >
                Navn *
              </label>
              <input
                type="text"
                id="name"
                name="name"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors duration-200"
                placeholder="Ditt fulle navn"
              />
            </div>

            <!-- E-post -->
            <div>
              <label
                for="email"
                class="block text-sm font-medium text-gray-700 mb-2"
              >
                E-post *
              </label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors duration-200"
                placeholder="din@epost.no"
              />
            </div>

            <!-- Telefon -->
            <div>
              <label
                for="phone"
                class="block text-sm font-medium text-gray-700 mb-2"
              >
                Telefon
              </label>
              <input
                type="tel"
                id="phone"
                name="phone"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors duration-200"
                placeholder="+47 xxx xx xxx"
              />
            </div>

            <!-- Bedrift -->
            <div>
              <label
                for="company"
                class="block text-sm font-medium text-gray-700 mb-2"
              >
                Bedrift / Organisasjon *
              </label>
              <input
                type="text"
                id="company"
                name="company"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors duration-200"
                placeholder="Bedriftsnavn"
                required
              />
            </div>

            <!-- Pakke valg -->
            <div>
              <label
                for="package"
                class="block text-sm font-medium text-gray-700 mb-2"
              >
                Interessert i pakke
              </label>
              <select
                id="package"
                name="package"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors duration-200"
              >
                <option value="">Velg pakke (valgfritt)</option>
                <option
                  value="start"
                  {selectedPackage === 'start' ? 'selected' : ''}>Start</option
                >
                <option
                  value="plus"
                  {selectedPackage === 'plus' ? 'selected' : ''}>Plus</option
                >
                <option
                  value="pro"
                  {selectedPackage === 'pro' ? 'selected' : ''}>Pro</option
                >
                <option
                  value="premium"
                  {selectedPackage === 'premium' ? 'selected' : ''}
                  >Premium</option
                >
                <option value="custom">Tilpasset lÃ¸sning</option>
              </select>
            </div>

            <!-- Budsjett -->
            <div>
              <label
                for="budget"
                class="block text-sm font-medium text-gray-700 mb-2"
              >
                Budsjett (valgfritt)
              </label>
              <select
                id="budget"
                name="budget"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors duration-200"
              >
                <option value="">Velg budsjettramme (valgfritt)</option>
                <option value="under-50k">Under 10.000 kr</option>
                <option value="50k-100k">10.000 - 20.000 kr</option>
                <option value="100k-200k">20.000 - 50.000 kr</option>
                <option value="200k-500k">50.000 - 100.000 kr</option>
                <option value="over-500k">Over 100.000 kr</option>
              </select>
            </div>

            <!-- Melding -->
            <div>
              <label
                for="message"
                class="block text-sm font-medium text-gray-700 mb-2"
              >
                Melding *
              </label>
              <textarea
                id="message"
                name="message"
                rows="6"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors duration-200"
                placeholder="Fortell om ditt prosjekt. Hva er dine mÃ¥l, utfordringer og forventninger?"
              ></textarea>
            </div>

            <!-- Samtykke -->
            <div class="flex items-start">
              <input
                type="checkbox"
                id="consent"
                name="consent"
                required
                class="mt-1 h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded"
              />
              <label for="consent" class="ml-3 text-sm text-gray-600">
                Jeg godtar at mine opplysninger behandles i henhold til
                <a
                  href="/personvern"
                  class="text-blue-600 hover:text-blue-700 underline"
                  >personvernserklÃ¦ringen</a
                > *
              </label>
            </div>

            <!-- Submit knapp -->
            <button
              type="submit"
              class="w-full bg-blue-600 text-white font-medium rounded-lg px-6 py-3 text-base transition-all duration-200 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2"
            >
              Send melding
            </button>
          </form>
        </div>

        <!-- Kontaktinfo og CTA -->
        <div>
          <div class="bg-gray-50 rounded-lg p-8 mb-8">
            <h3 class="text-2xl font-bold text-gray-900 mb-6">
              Eller book direkte
            </h3>
            <p class="text-gray-600 mb-6">
              Foretrekker du en direkte samtale? Book et gratis
              konsultasjonsmÃ¸te.
            </p>
            <CTAButton
              text="Book gratis konsultasjon"
              onclick="openCalendly()"
              size="lg"
              class="w-full mb-6"
            />
            <p class="text-sm text-gray-500">
              ðŸ“… 20 minutter<br />
