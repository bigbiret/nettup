      if (button.dataset.category === category) {
        button.className =
          'px-4 py-2 rounded-full text-sm font-medium transition-colors duration-200 bg-blue-600 text-white';
      } else {
        button.className =
          'px-4 py-2 rounded-full text-sm font-medium transition-colors duration-200 bg-gray-100 text-gray-700 hover:bg-gray-200';
      }
    });

    let visibleCount = 0;

    // Filtrer case items
    caseItems.forEach((item) => {
      if (category === 'alle' || item.dataset.category === category) {
        item.style.display = 'block';
        visibleCount++;
      } else {
        item.style.display = 'none';
      }
    });

    // Vis/skjul tom tilstand
    if (visibleCount === 0) {
      emptyState.classList.remove('hidden');
    } else {
      emptyState.classList.add('hidden');
    }
  }
</script>
