---
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';

export interface Props {
  title: string;
  description?: string;
}

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="no">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content={description || 'Nettup - moderne webutvikling som konverterer'}
    />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- Font optimization - preconnect to Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

    <title>{title}</title>

    <!-- Canonical URL -->
    <link rel="canonical" href={Astro.url} />

    <!-- Open Graph / Social Media -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:title" content={title} />
    <meta
      property="og:description"
      content={description || 'Nettup - moderne webutvikling som konverterer'}
    />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={Astro.url} />
    <meta property="twitter:title" content={title} />
    <meta
      property="twitter:description"
      content={description || 'Nettup - moderne webutvikling som konverterer'}
    />

    <!-- Calendly embed styles -->
    <link
      href="https://assets.calendly.com/assets/external/widget.css"
      rel="stylesheet"
    />

    <!-- Google Analytics -->
    <script
      async
      src="https://www.googletagmanager.com/gtag/js?id=GA_MEASUREMENT_ID"
    ></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag('js', new Date());

      // Replace GA_MEASUREMENT_ID with your actual Google Analytics ID
      gtag('config', 'GA_MEASUREMENT_ID', {
        page_title: document.title,
        page_location: window.location.href,
      });
    </script>
  </head>
  <body class="min-h-screen flex flex-col">
    <Navbar />
    <main class="flex-grow">
      <slot />
    </main>
    <Footer />

    <!-- Calendly badge widget -->
    <script
      src="https://assets.calendly.com/assets/external/widget.js"
      type="text/javascript"
      async></script>

    <!-- Global Calendly integration -->
    <script>
      // Global function to open Calendly modal
      window.openCalendly = function () {
        Calendly.initPopupWidget({
          url: 'https://calendly.com/nettup/konsultasjon', // Oppdater med din faktiske Calendly URL
        });
        return false;
      };

      // Analytics tracking for Calendly events
      window.addEventListener('message', function (e) {
        if (e.data.event && e.data.event.indexOf('calendly') === 0) {
          if (e.data.event === 'calendly.event_scheduled') {
            // Track conversion event
            console.log('Calendly booking completed');

            // Google Analytics event tracking
            if (typeof gtag !== 'undefined') {
              gtag('event', 'calendly_booking', {
                event_category: 'engagement',
                event_label: 'consultation_scheduled',
                value: 1,
              });

              // Google Ads conversion tracking (if applicable)
              // gtag('event', 'conversion', {
              //   'send_to': 'AW-CONVERSION_ID/CONVERSION_LABEL'
              // });
            }
          }
        }
      });
    </script>
  </body>
</html>
