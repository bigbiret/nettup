---
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import GoogleAnalytics from '../components/GoogleAnalytics.astro';
import CookieBanner from '../components/CookieBanner.astro';
import '../styles/global.css';

export interface Props {
  title: string;
  description?: string;
}

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="no">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content={description || 'Nettup - moderne webutvikling som konverterer'}
    />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- Optimized font loading -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
      media="print"
      onload="this.media='all'"
    />
    <noscript>
      <link
        href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
        rel="stylesheet"
      />
    </noscript>

    <title>{title}</title>

    <!-- Google Analytics -->
    <GoogleAnalytics />

    <!-- Canonical URL -->
    <link rel="canonical" href={Astro.url} />

    <!-- Open Graph / Social Media -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:title" content={title} />
    <meta
      property="og:description"
      content={description || 'Nettup - moderne webutvikling som konverterer'}
    />
    <meta property="og:image" content={new URL('/favicon.svg', Astro.url)} />

    <!-- Performance optimization -->
    <link rel="dns-prefetch" href="//assets.calendly.com" />
  </head>
  <body class="min-h-screen bg-white">
    <Navbar />
    <main>
      <slot />
    </main>
    <Footer />
    <CookieBanner />

    <!-- Calendly Widget Script -->
    <script>
      // Lazy load Calendly only when needed
      window.openCalendly = function () {
        if (typeof Calendly !== 'undefined') {
          Calendly.initPopupWidget({
            url: 'https://calendly.com/dittselskap/konsultasjon',
          });
        } else {
          // Load Calendly script dynamically
          const script = document.createElement('script');
          script.src = 'https://assets.calendly.com/assets/external/widget.js';
          script.onload = function () {
            Calendly.initPopupWidget({
              url: 'https://calendly.com/dittselskap/konsultasjon',
            });
          };
          document.head.appendChild(script);
        }
      };
    </script>
  </body>
</html>
