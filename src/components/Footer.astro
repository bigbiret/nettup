</footer>

<script>
  async function submitLeadForm(event) {
    event.preventDefault();
    
    const form = event.target;
    const submitButton = form.querySelector('button[type="submit"]');
    const originalText = submitButton.textContent;
    
    // Disable form og vis loading state
    submitButton.disabled = true;
    submitButton.textContent = 'Sender...';
    
    try {
      const formData = new FormData(form);
      
      const response = await fetch('/api/lead', {
        method: 'POST',
        body: formData
      });
      
      const result = await response.json();
      
      if (result.success) {
        // Vis suksessmelding  
        showLeadMessage(result.message, 'success');
        form.reset();
      } else {
        // Vis feilmelding
        showLeadMessage(result.error, 'error');
      }
    } catch (error) {
      console.error('Lead form submission error:', error);
      showLeadMessage('Noe gikk galt. Prøv igjen senere.', 'error');
    } finally {
      // Reset button
      submitButton.disabled = false;
      submitButton.textContent = originalText;
    }
  }
  
  function showLeadMessage(message, type) {
    // Lag en toast melding
    const toast = document.createElement('div');
    toast.className = `fixed bottom-4 right-4 p-4 rounded-lg text-white z-50 ${
      type === 'success' ? 'bg-green-500' : 'bg-red-500'
    }`;
    toast.textContent = message;
    
    document.body.appendChild(toast);
    
    // Fjern etter 4 sekunder
    setTimeout(() => {
      toast.remove();
    }, 4000);
  }
</script> 