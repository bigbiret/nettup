---
// Analytics Notice Component
// This component can be used to inform users about analytics tracking
// Follows GDPR and privacy best practices

export interface Props {
  show?: boolean;
}

const { show = false } = Astro.props;
---

{show && (
  <div 
    class="fixed bottom-4 right-4 bg-white border border-gray-200 rounded-lg shadow-lg p-4 max-w-sm z-50"
    role="alert"
    aria-label="Analytics informasjon"
  >
    <div class="flex items-start space-x-3">
      <div class="flex-shrink-0" aria-hidden="true">
        <svg class="w-5 h-5 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
        </svg>
      </div>
      <div class="flex-1" role="region" aria-label="Analytics informasjon">
        <h3 class="text-sm font-medium text-gray-900">Analytics Notice</h3>
        <p class="text-xs text-gray-600 mt-1">
          We use Google Analytics to understand how visitors interact with our website. 
          This helps us improve our services. No personal information is collected.
        </p>
      </div>
      <button 
        class="text-gray-400 hover:text-gray-600 transition-colors"
        onclick="this.parentElement.parentElement.remove()"
        aria-label="Lukk melding"
      >
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
          <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
        </svg>
      </button>
    </div>
  </div>
)} 