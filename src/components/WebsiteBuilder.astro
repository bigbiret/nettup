---
// Website Builder Animation Component
---

<style>
  .builder-container {
    @apply relative w-full h-full min-h-[500px];
    perspective: 1200px;
  }

  .laptop-frame {
    @apply relative w-full max-w-[500px] mx-auto;
    transform: rotateY(-15deg) rotateX(5deg);
    transform-style: preserve-3d;
    animation: laptopFloat 6s ease-in-out infinite;
  }

  @keyframes laptopFloat {
    0%, 100% {
      transform: rotateY(-15deg) rotateX(5deg) translateY(0);
    }
    50% {
      transform: rotateY(-10deg) rotateX(3deg) translateY(-10px);
    }
  }

  .screen {
    @apply relative bg-gray-900 rounded-lg overflow-hidden shadow-2xl;
    aspect-ratio: 16/10;
    background: linear-gradient(135deg, #1a1a2e 0%, #0f0f1e 100%);
  }

  .screen-content {
    @apply absolute inset-2 bg-white rounded overflow-hidden;
  }

  /* Browser Bar */
  .browser-bar {
    @apply h-8 bg-gray-100 border-b border-gray-200 flex items-center px-3 gap-2;
  }

  .browser-dot {
    @apply w-3 h-3 rounded-full;
  }

  .url-bar {
    @apply flex-1 bg-white rounded px-2 py-1 text-xs text-gray-600 ml-2;
  }

  /* Website Building Animation */
  .website-content {
    @apply relative h-full p-4 overflow-hidden;
  }

  /* Header Animation */
  @keyframes headerSlide {
    0% {
      transform: translateX(-100%);
      opacity: 0;
    }
    20% {
      transform: translateX(0);
      opacity: 1;
    }
    100% {
      transform: translateX(0);
      opacity: 1;
    }
  }

  .header-bar {
    @apply h-12 bg-gradient-to-r from-blue-500 to-purple-600 rounded mb-4;
    animation: headerSlide 4s ease-out infinite;
  }

  /* Navigation Items */
  @keyframes navAppear {
    0%, 15% {
      opacity: 0;
      transform: scale(0);
    }
    30%, 100% {
      opacity: 1;
      transform: scale(1);
    }
  }

  .nav-items {
    @apply absolute top-3 right-4 flex gap-3;
  }

  .nav-item {
    @apply w-16 h-1 bg-white rounded-full opacity-80;
    animation: navAppear 4s ease-out infinite;
  }

  .nav-item:nth-child(1) { animation-delay: 0.1s; }
  .nav-item:nth-child(2) { animation-delay: 0.2s; }
  .nav-item:nth-child(3) { animation-delay: 0.3s; }
  .nav-item:nth-child(4) { animation-delay: 0.4s; }

  /* Hero Section Build */
  @keyframes heroTextType {
    0%, 25% {
      width: 0;
    }
    45%, 100% {
      width: 100%;
    }
  }

  .hero-title {
    @apply h-8 bg-gray-800 rounded mb-2 overflow-hidden;
    animation: heroTextType 4s ease-out infinite;
    animation-delay: 0.5s;
  }

  .hero-subtitle {
    @apply h-4 bg-gray-400 rounded mb-4 overflow-hidden;
    width: 80%;
    animation: heroTextType 4s ease-out infinite;
    animation-delay: 0.7s;
  }

  /* Content Blocks */
  @keyframes blockBuild {
    0%, 35% {
      transform: scaleY(0);
      opacity: 0;
    }
    50% {
      transform: scaleY(1);
      opacity: 1;
    }
    100% {
      transform: scaleY(1);
      opacity: 1;
    }
  }

  .content-grid {
    @apply grid grid-cols-3 gap-3 mb-4;
  }

  .content-block {
    @apply bg-gradient-to-br rounded overflow-hidden;
    height: 80px;
    transform-origin: top;
    animation: blockBuild 4s ease-out infinite;
  }

  .content-block:nth-child(1) {
    @apply from-blue-100 to-blue-200;
    animation-delay: 0.9s;
  }

  .content-block:nth-child(2) {
    @apply from-green-100 to-green-200;
    animation-delay: 1.0s;
  }

  .content-block:nth-child(3) {
    @apply from-purple-100 to-purple-200;
    animation-delay: 1.1s;
  }

  /* Image Placeholder Animation */
  @keyframes imageFade {
    0%, 45% {
      opacity: 0;
      transform: scale(0.8);
    }
    60%, 100% {
      opacity: 1;
      transform: scale(1);
    }
  }

  .image-section {
    @apply relative h-32 bg-gradient-to-br from-gray-100 to-gray-200 rounded overflow-hidden;
    animation: imageFade 4s ease-out infinite;
    animation-delay: 1.3s;
  }

  .image-icon {
    @apply absolute inset-0 flex items-center justify-center;
  }

  /* Code Lines Animation */
  @keyframes codeLine {
    0%, 50% {
      transform: scaleX(0);
    }
    70%, 100% {
      transform: scaleX(1);
    }
  }

  .code-editor {
    @apply absolute bottom-4 right-4 w-32 h-24 bg-gray-900 rounded p-2 shadow-lg;
    animation: imageFade 4s ease-out infinite;
    animation-delay: 1.5s;
  }

  .code-line {
    @apply h-1 mb-1 rounded;
    transform-origin: left;
    animation: codeLine 4s ease-out infinite;
  }

  .code-line:nth-child(1) {
    @apply bg-blue-400;
    width: 80%;
    animation-delay: 1.6s;
  }

  .code-line:nth-child(2) {
    @apply bg-green-400;
    width: 60%;
    animation-delay: 1.7s;
  }

  .code-line:nth-child(3) {
    @apply bg-purple-400;
    width: 90%;
    animation-delay: 1.8s;
  }

  .code-line:nth-child(4) {
    @apply bg-yellow-400;
    width: 70%;
    animation-delay: 1.9s;
  }

  /* Floating Elements */
  @keyframes floatElement {
    0%, 100% {
      transform: translateY(0) rotate(0deg);
    }
    50% {
      transform: translateY(-20px) rotate(5deg);
    }
  }

  .floating-icon {
    @apply absolute w-10 h-10 bg-white rounded-lg shadow-lg flex items-center justify-center;
    animation: floatElement 3s ease-in-out infinite;
  }

  .icon-1 {
    top: 20%;
    left: -50px;
    animation-delay: 0s;
  }

  .icon-2 {
    top: 50%;
    right: -50px;
    animation-delay: 1s;
  }

  .icon-3 {
    bottom: 20%;
    left: -50px;
    animation-delay: 2s;
  }

  /* Progress Bar */
  @keyframes progressFill {
    0% {
      width: 0%;
    }
    80% {
      width: 100%;
    }
    85% {
      width: 100%;
    }
    100% {
      width: 0%;
    }
  }

  .progress-bar {
    @apply absolute bottom-0 left-0 right-0 h-1 bg-gray-200;
  }

  .progress-fill {
    @apply h-full bg-gradient-to-r from-blue-500 to-purple-600;
    animation: progressFill 4s ease-out infinite;
  }

  /* Sparkle Effects */
  @keyframes sparkle {
    0%, 100% {
      opacity: 0;
      transform: scale(0);
    }
    50% {
      opacity: 1;
      transform: scale(1);
    }
  }

  .sparkle {
    @apply absolute w-1 h-1 bg-yellow-400 rounded-full;
    animation: sparkle 2s ease-in-out infinite;
  }

  /* Laptop Base */
  .laptop-base {
    @apply relative w-full h-3 bg-gray-300 rounded-b-lg mt-1;
    transform: rotateX(70deg) translateZ(-10px);
    transform-style: preserve-3d;
  }

  .laptop-notch {
    @apply absolute top-0 left-1/2 transform -translate-x-1/2 w-12 h-1 bg-gray-400 rounded-b;
  }

  /* Glow Effect */
  @keyframes screenGlow {
    0%, 100% {
      box-shadow: 0 0 20px rgba(59, 130, 246, 0.3);
    }
    50% {
      box-shadow: 0 0 40px rgba(59, 130, 246, 0.6);
    }
  }

  .screen {
    animation: screenGlow 3s ease-in-out infinite;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .laptop-frame {
      transform: rotateY(-10deg) rotateX(3deg);
    }
    
    .floating-icon {
      display: none;
    }
  }
</style>

<div class="builder-container">
  <div class="laptop-frame">
    <!-- Floating Icons -->
    <div class="floating-icon icon-1">
      <svg class="w-6 h-6 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
      </svg>
    </div>
    <div class="floating-icon icon-2">
      <svg class="w-6 h-6 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zM14 21a4 4 0 004-4V5a2 2 0 00-2-2h-4a2 2 0 00-2 2v12a4 4 0 004 4z" />
      </svg>
    </div>
    <div class="floating-icon icon-3">
      <svg class="w-6 h-6 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
      </svg>
    </div>

    <!-- Laptop Screen -->
    <div class="screen">
      <div class="screen-content">
        <!-- Browser Bar -->
        <div class="browser-bar">
          <div class="browser-dot bg-red-400"></div>
          <div class="browser-dot bg-yellow-400"></div>
          <div class="browser-dot bg-green-400"></div>
          <div class="url-bar">nettup.no</div>
        </div>

        <!-- Website Content -->
        <div class="website-content">
          <!-- Header with Navigation -->
          <div class="header-bar relative">
            <div class="nav-items">
              <div class="nav-item"></div>
              <div class="nav-item"></div>
              <div class="nav-item"></div>
              <div class="nav-item"></div>
            </div>
          </div>

          <!-- Hero Section -->
          <div class="hero-title"></div>
          <div class="hero-subtitle"></div>

          <!-- Content Grid -->
          <div class="content-grid">
            <div class="content-block"></div>
            <div class="content-block"></div>
            <div class="content-block"></div>
          </div>

          <!-- Image Section -->
          <div class="image-section">
            <div class="image-icon">
              <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
            </div>
            <!-- Sparkle Effects -->
            <div class="sparkle" style="top: 20%; left: 80%; animation-delay: 0.5s;"></div>
            <div class="sparkle" style="top: 70%; left: 20%; animation-delay: 1s;"></div>
            <div class="sparkle" style="top: 40%; left: 60%; animation-delay: 1.5s;"></div>
          </div>

          <!-- Code Editor Window -->
          <div class="code-editor">
            <div class="code-line"></div>
            <div class="code-line"></div>
            <div class="code-line"></div>
            <div class="code-line"></div>
          </div>

          <!-- Progress Bar -->
          <div class="progress-bar">
            <div class="progress-fill"></div>
          </div>
        </div>
      </div>
    </div>

    <!-- Laptop Base -->
    <div class="laptop-base">
      <div class="laptop-notch"></div>
    </div>
  </div>
</div>