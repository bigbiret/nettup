---
// No script needed for this component
---

<nav class="bg-white shadow-lg sticky top-0 z-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <!-- Logo -->
      <div class="flex-shrink-0">
        <a href="/" class="flex items-center">
          <!-- Temporary text logo instead of 1MB image -->
          <span class="text-2xl font-bold text-blue-600">Nettup</span>
        </a>
      </div>

      <!-- Desktop Menu -->
      <div class="hidden md:block">
        <div class="ml-10 flex items-baseline space-x-4">
          <a
            href="/"
            class="text-gray-700 hover:text-blue-600 px-3 py-2 rounded-md text-sm font-medium transition-colors duration-200"
            >Hjem</a
          >
          <a
            href="/tjenester"
            class="text-gray-700 hover:text-blue-600 px-3 py-2 rounded-md text-sm font-medium transition-colors duration-200"
            >Tjenester</a
          >
          <a
            href="/pakker"
            class="text-gray-700 hover:text-blue-600 px-3 py-2 rounded-md text-sm font-medium transition-colors duration-200"
            >Pakker & Priser</a
          >
          <a
            href="/case"
            class="text-gray-700 hover:text-blue-600 px-3 py-2 rounded-md text-sm font-medium transition-colors duration-200"
            >Prosjekter</a
          >
          <a
            href="/om-oss"
            class="text-gray-700 hover:text-blue-600 px-3 py-2 rounded-md text-sm font-medium transition-colors duration-200"
            >Om oss</a
          >
          <a
            href="/kontakt"
            class="bg-blue-600 text-white hover:bg-blue-700 px-4 py-2 rounded-md text-sm font-medium transition-colors duration-200"
            >Kontakt</a
          >
        </div>
      </div>

      <!-- Mobile menu button -->
      <div class="md:hidden">
        <button
          type="button"
          class="bg-gray-200 inline-flex items-center justify-center p-2 rounded-md text-gray-700 hover:text-white hover:bg-gray-300 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-blue-500"
          id="mobile-menu-button"
        >
          <span class="sr-only">Ã…pne hovedmeny</span>
          <!-- Hamburger icon -->
          <svg
            class="block h-6 w-6"
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            aria-hidden="true"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
          <!-- Close icon -->
          <svg
            class="hidden h-6 w-6"
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            aria-hidden="true"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile menu -->
  <div class="md:hidden hidden" id="mobile-menu">
    <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3 bg-white shadow-lg">
      <a
        href="/"
        class="text-gray-700 hover:text-blue-600 block px-3 py-2 rounded-md text-base font-medium"
        >Hjem</a
      >
      <a
        href="/tjenester"
        class="text-gray-700 hover:text-blue-600 block px-3 py-2 rounded-md text-base font-medium"
        >Tjenester</a
      >
      <a
        href="/pakker"
        class="text-gray-700 hover:text-blue-600 block px-3 py-2 rounded-md text-base font-medium"
        >Pakker & Priser</a
      >
      <a
        href="/case"
        class="text-gray-700 hover:text-blue-600 block px-3 py-2 rounded-md text-base font-medium"
        >Prosjekter</a
      >
      <a
        href="/om-oss"
        class="text-gray-700 hover:text-blue-600 block px-3 py-2 rounded-md text-base font-medium"
        >Om oss</a
      >
      <a
        href="/kontakt"
        class="bg-blue-600 text-white hover:bg-blue-700 block px-3 py-2 rounded-md text-base font-medium"
        >Kontakt</a
      >
      <a
        href="#"
        class="text-gray-700 hover:text-blue-600 block px-3 py-2 rounded-md text-base font-medium"
        >Portfolio</a
      >
    </div>
  </div>
</nav>

<script>
  // Mobile menu toggle
  const button = document.getElementById('mobile-menu-button');
  const menu = document.getElementById('mobile-menu');

  if (button && menu) {
    button.addEventListener('click', () => {
      menu.classList.toggle('hidden');
    });
  }
</script>
